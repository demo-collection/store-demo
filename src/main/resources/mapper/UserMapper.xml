<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.store.system.mapper.UserMapper">

    <insert id="createUser" parameterType="com.store.system.entity.User">
        insert into client
        set
        <if test="name != null and name != ''">
            name=#{name}
        </if>

        <if test="type != null and name != ''">
            type=#{type}
        </if>
        <if test="contacts != null and contacts != ''">
            contacts=#{contacts}
        </if>
        <if test="concatPhone != null and concatPhone != 0">
            concat_phone=#{concatPhone}
        </if>
        address=#{address},
        mark=#{mark}
    </insert>

    <select id="getUser" parameterType="string" resultType="com.store.system.entity.User">
        select id, name, pwssword, permissions, mark from user where id = #{id}
    </select>
</mapper>